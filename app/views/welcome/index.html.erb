<%= javascript_pack_tag 'application' %>
<div data-controller='confetti' method='get' class="confetti-div">
  <canvas data-action="load@window->confetti#render" id="my-canvas"></canvas>
</div>
<header>
  <h1 class="zab-h1">zab<span class="logo-period">.</span></h1>
</header>
  
<main class="welcome">
  <section>
    <div class="welcome-bottom">
      <div class="jumbotron">
        <h1 class="display-4">Paying off debt is hard. We make it easier and fun.</h1>
        <p id="600" class="lead">The <mark>You Need a Budget™️</mark> integration you've been searching for. </p>
        <hr class="my-3">
      </div>
      <%= button_to "Login with Google", "/auth/google_oauth2", class: "btn btn-primary login-btn", id: "login-btn" %>
    </div>
  </section>
  
  <section class="welcome-progress-bars">
    <div class="debts-wrapper">
      <h2>Your Debts </h2>
      <div class="progressbar-text">
        <p>📄Avant</p>
        <p>$2,300</p>
      </div>
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <div class="progressbar-text">
        <p>💳USAA</p>
        <p>$1,300</p>
      </div>
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 60%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <div class="progressbar-text">
        <p>📚Student Loan #1</p>
        <p>$7,300</p>
      </div>
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 15%" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <div class="progressbar-text">
        <p>📚Student Loan #2</p>
        <p>$12,300</p>
      </div>
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 10%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    </div>
  </section>
</main>
